{ Chuong trinh nhap vao 2 so nguyen bat ky; tinh tong, hieu cua 2 so do }
program ch1_p02;
var a,b: integer;
begin
   write('Hay nhap so thu nhat:');
   readln(a);
   write('Hay nhap so thu hai:');
   readln(b);
   writeln('Tong cua 2 so la:',a+b);
   writeln('Hieu cua 2 so la:',a-b);
   readln;
end.
